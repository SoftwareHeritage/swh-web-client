#!/usr/bin/make -f

export PYBUILD_NAME=swh.scanner
export PYBUILD_TEST_ARGS=-sv

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_install:
	dh_install
	rm -v $(CURDIR)/debian/python3-*/usr/lib/python*/dist-packages/swh/__init__.py
	rm -v $(CURDIR)/debian/python3-*/usr/lib/python*/dist-packages/swh/web/__init__.py
